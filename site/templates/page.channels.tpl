<main>
	<section class="block block-shadow">
		<h2>Список каналов</h2>
		<hr>
		<div id="channels-list" class="channels-list"></div>
		<hr>
		<div class="pages-nav">
			<button id="first-page" class="tooltip icon-button" data-tooltip="Первая страница" data-tt-pos="bottom" data-tt-pos-margin="15">
				<img src="{gl_images_path}/first_page.svg">
			</button>
			<button id="prev-page" class="tooltip icon-button" data-tooltip="Предыдущая страница" data-tt-pos="bottom" data-tt-pos-margin="15">
				<img src="{gl_images_path}/prev_page_cleaned.svg">
			</button>
			<span id="pages">1/1</span>
			<button id="next-page" class="tooltip icon-button" data-tooltip="Следующая страница" data-tt-pos="bottom" data-tt-pos-margin="15">
				<img src="{gl_images_path}/next_page_cleaned.svg">
			</button>
			<button id="last-page" class="tooltip icon-button" data-tooltip="Последняя страница" data-tt-pos="bottom" data-tt-pos-margin="15">
				<img src="{gl_images_path}/last_page.svg">
			</button>
		</div>
	</section>
</main>